{
  "private": true,
  "displayName": "Homebridge Onkyo",
  "name": "homebridge-onkyo",
  "version": "1.0.0",
  "description": "Homebridge plugin for Onkyo Receivers",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ToddGreenfield/homebridge-onkyo.git"
  },
  "bugs": {
    "url": "https://github.com/ToddGreenfield/homebridge-onkyo/issues"
  },
  "engines": {
    "node": ">=10.17.0",
    "homebridge": ">=1.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "pretest": "eslint --ignore-path .gitignore package.json config.schema.json",
    "test": "xo"
  },
  "keywords": [
    "homebridge-plugin",
    "homebridge",
    "onkyo-avr",
    "onkyo"
  ],
  "dependencies": {
    "eiscp": "git://github.com/untitledlt/eiscp.js.git",
    "polling-to-event": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "homebridge": "^1.2.2",
    "nodemon": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": false,
    "rules": {
      "camelcase": "off",
      "kebabCase": "off",
      "no-mixed-spaces-and-tabs": "warn",
      "no-useless-escape": "warn",
      "indent": "off",
      "quotes": "warn",
      "capitalized-comments": "off",
      "no-var": "warn",
      "prefer-destructuring": "off",
      "prefer-arrow-callback": "warn",
      "object-shorthand": [
        "off",
        "always",
        {
          "ignoreConstructors": true
        }
      ],
      "quote-props": "error",
      "no-unused-vars": "warn",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ]
    }
  }
}
